{
  "version": 2,
  "public": true,
  "framework": "nextjs",
  "buildCommand": "next build",
  "installCommand": "npm install",
  "regions": ["sfo1"],
  "rewrites": [
    { "source": "/", "destination": "/waitlist" }
  ],
  "routes": [
    { "src": "/terms", "dest": "/terms" },
    { "src": "/privacy", "dest": "/privacy" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/static/(.*)", "dest": "/static/$1" }
  ],
  "github": {
    "silent": true,
    "autoAlias": true
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "build": {
    "env": {
      "NEXT_PUBLIC_VERCEL_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ]
} 